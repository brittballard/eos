<h1>Listing deals</h1>

<table>
  <tr>
    <th>Start date</th>
    <th>End date</th>
    <th>Mils</th>
    <th>Term</th>
    <th>Annual kwh</th>
    <th>Term kwh</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @deals.each do |deal| %>
  <tr>
    <td><%= deal.start_date %></td>
    <td><%= deal.end_date %></td>
    <td><%= deal.mils %></td>
    <td><%= deal.term %></td>
    <td><%= deal.annual_kwh %></td>
    <td><%= deal.term_kwh %></td>
    <td><%= link_to 'Show', deal %></td>
    <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
    <td><%= link_to 'Destroy', deal, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

