<div>
<h3>Sign in</h3>
</div>

<div>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.label :email %><br />
  <%= f.email_field :email %>

  <%= f.label :password %><br />
  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? -%>
    <br /><%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>

  <%= f.submit "Sign in" %>
<% end %>
</div>

<div>
<%= render "devise/shared/links" %>
</div>
